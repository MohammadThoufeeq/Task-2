while(1):
    print('1.addgrade')
    print('2.editgrade')
    print('3.view grade')
    choice = int(input('enter your choice'))
    if choice == 1:
        print('enter maths grade:')
        m = int(input())
        print('enter befa grade')
        b = int(input())
        print('enter os grade:')
        o = int(input())
        print('enter DBMS grade:')
        d = int(input())
        print('enter se grade:')
        s = int(input())
    elif choice == 2:
         print('enter maths grade you want to edit:')
         m = int(input())
         print('enter befa grade you want to edit:')
         b = int(input())
         print('enter os grade you want to edit:')
         o = int(input())
         print('enter DBMS grade you want to edit:')
         d = int(input())
         print('enter se grade you want to edif:')
         s = int(input())
    elif choice == 3:
          print('The grades of each subject are:')
          print('Maths Grade :',m)
          print('Befa Grade :',b)
          print('os Grade :',o)
          print('Dbms Grade :',d)
          print('se Grade:',s)
          avggrade = m+b+o+d+s/5
          print('average grade is:',avggrade)
